<!DOCTYPE html>
<html>
  <head>
    <title>StatsOfWaterdeep</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <div class="top-bar">
    <div id="responsive-menu">
      <div class="top-bar-left">
        <ul class="dropdown menu" data-dropdown-menu>
          <li><strong><a href="/">Lords of Waterdeep</a></strong></li>
          <li><a href="/players">Players</a></li>
          <li><a href="/lords">Lords</a></li>
          <li><a href="/factions">Factions</a></li>
        </ul>
      </div>
      <div class="top-bar-right">
        <ul class="menu">
          <li><input type="search" placeholder="Search"></li>
        </ul>
      </div>
      <div class="top-bar">
          <% if player_signed_in? %>
            <ul class="dropdown menu" data-dropdown-menu>
              <li>
              <%= link_to current_player.email, player_path(current_player.id) %>
                <ul class="menu vertical">
                  <% if current_player.admin == true  %>
                  <li><%= link_to 'View All Players', players_path, :class => 'navbar-link' %></li>
                  <% end %>
                  <li><%= link_to 'Edit profile', edit_player_registration_path, :class => 'navbar-link' %></li>
                  <li><%= link_to "Logout", destroy_player_session_path, method: :delete, :class => 'navbar-link' %></li>
                </ul>
              </li>
          <% else %>
        <span class="devise-top-bar"><%= link_to "Sign up", new_player_registration_path, :class => 'navbar-link'  %></span>
        <span class="devise-top-bar"><%= link_to "Login", new_player_session_path, :class => 'navbar-link'  %></span>
          <% end %>
      </ul>
    </div>
    </div>
  </div>

  <body>
    <%= yield %>
  </body>
</html>
