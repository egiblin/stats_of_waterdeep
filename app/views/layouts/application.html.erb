<!DOCTYPE html>
<html>
  <head>
    <title>StatsOfWaterdeep</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>
  <div class="top-bar">
    <div class="top-bar-left">
      <ul class="dropdown menu" data-dropdown-menu>
        <li class="menu-text"><a href="/">Stats of Waterdeep</a></li>
        <li><a href="/players">Players</a></li>
        <li><a href="/lords">Lords</a></li>
        <li><a href="/factions">Factions</a></li>
      </ul>
    </div>
    <div class="top-bar-right">
      <% if player_signed_in? %>
        <ul class="dropdown menu" data-dropdown-menu>
          <li>
            <%= link_to current_player.username, user_path(current_player.id) %>
            <ul class="menu vertical">
              <% if current_user.admin %>
              <li><%= link_to 'View All Players', players_path, :class => 'navbar-link' %></li>
              <% end %>
              <li><%= link_to 'Edit profile', edit_player_registration_path, :class => 'navbar-link' %></li>
              <li><%= link_to "Logout", destroy_player_session_path, method: :delete, :class => 'navbar-link' %></li>
            </ul>
          </li>
        </ul>
      <% else %>
      <span><%= link_to "Sign Up", new_player_registration_path, :class => 'navbar-link' %></span>
      <span><%= link_to "Login", new_player_session_path, :class => 'navbar-link' %></span>
      <% end %>
    </div>
  </div>
  <body>
    <%= yield %>
  </body>
</html>
